<!--barnhen begin-->
    <table id="list" class="one"></table>
    <div id="pager"></div>
    @section Scripts{
        <script type="text/javascript">
            var mdata = []
        </script>
        @model IEnumerable<MVC4Crud2.Models.ContactModels>
        @foreach (var item in Model)
        {
            <script type="text/javascript">
                row =
                    {
                        ID: '@item.ID', FirstName: '@item.FirstName', MiddleName: '@item.MiddleName',
                        LastName: '@item.LastName', Address: '@item.Address', City: '@item.City',
                        State: '@item.State', Zip: '@item.Zip', Country: '@item.Country'
                    };
                mdata.push(row);
            </script>
        }
        <script type="text/javascript">
            jQuery(document).ready(function () {
                var myGrid = $('#list');
                myGrid.jqGrid({
                    caption: "Contact",
                    //url: '/Department/GetRecords/',
                    url: '<%= Url.Action("Index", "ContactController") %>',
                    //datatype: "json",
                    datatype: "local",
                    data: mdata,
                    contentType: "application/json; charset-utf-8",
                    mtype: 'POST', //POST
                    colNames: [/*'User ID',*/ 'FirstName', 'MiddleName', 'LastName',
                                     'Address', 'City', 'State', 'Zip', 'Country'],
                    colModel: [
                                    //{ name: 'ID', index: 'ID' },
                                    { name: 'FirstName', index: 'FirstName' },
                                    { name: 'MiddleName', index: 'MiddleName' },
                                    { name: 'LastName', index: 'LastName' },
                                    { name: 'Address', index: 'Address' },
                                    { name: 'City', index: 'City' },
                                    { name: 'State', index: 'State' },
                                    { name: 'Zip', index: 'Zip' },
                                    { name: 'Country', index: 'Country' },
                    ],
                    rowNum: 5,
                    width: 960,
                    height: 230,
                    rownumbers: false,
                    //subGrid: true,
                    emptyrecords: "No records to view",
                    multiselect: true,
                    shrinkToFit: true
                });
            });
        </script>
        @Scripts.Render("~/bundles/jqGrid")
        
    }
    <!--barnhen end-->
